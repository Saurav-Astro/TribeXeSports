rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access to the 'Tournament_photos' folder for authenticated users
    match /Tournament_photos/{imageName} {
      allow write: if request.auth != null;
    }
  }
}
